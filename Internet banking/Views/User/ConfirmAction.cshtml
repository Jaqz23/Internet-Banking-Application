@model IB.Core.Application.ViewModels.User.SaveUserViewModel
@{
    ViewData["Title"] = "Confirmar acción";
    bool isActive = Model.IsActive;
}

<div class="container mt-5 w-25">
    <div class="card card-box-shadow">
        <div class="card-header bg-white fw-bold text-center">
            <h4>@(isActive ? $"Inactivar al usuario: {Model.UserName}" : $"Activar al usuario: {Model.UserName}")</h4>
        </div>
        <div class="card-body text-center">
            <form method="post" asp-controller="User" asp-action="@(isActive ? "InactiveUser" : "ActiveUser")">
                <input type="hidden" asp-for="Id" />

                <p class="mb-3">¿Estás seguro de que deseas realizar esta acción?</p>

                <div class="d-flex justify-content-center gap-2">
                    <button type="submit" class="btn @(isActive ? "btn-danger" : "btn-success")">
                        Confirmar
                    </button>
                    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
