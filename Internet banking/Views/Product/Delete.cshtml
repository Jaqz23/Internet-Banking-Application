@model IB.Core.Application.ViewModels.Product.ProductsViewModel

@{
    ViewData["Title"] = "Confirmar Eliminación";
}

<div class="container mt-5 w-50">
    <div class="card card-box-shadow">
        <div class="card-header bg-white fw-bold">
            <h4>Eliminar Producto</h4>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="Product" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ProductType" />
                <input type="hidden" asp-for="UserId" />

                <div class="mb-3">
                    <p class="fs-5">¿Estás seguro de que deseas eliminar el siguiente producto?</p>
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Tipo:</strong> @Model.ProductType</li>
                        <li class="list-group-item"><strong>Número de Cuenta/Tarjeta:</strong> @Model.AccountNumber</li>
                        <li class="list-group-item"><strong>Saldo:</strong> @string.Format("{0:C}", Model.Balance)</li>
                        @if (!string.IsNullOrEmpty(Model.ProductType) && Model.ProductType != "Cuenta de Ahorro")
                        {
                            <li class="list-group-item"><strong>Deuda:</strong> @string.Format("{0:C}", Model.Debt)</li>
                        }
                    </ul>
                </div>

                <div class="card-footer mt-2 bg-white text-end">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a class="btn btn-secondary" asp-action="Index" asp-route-userId="@Model.UserId">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

